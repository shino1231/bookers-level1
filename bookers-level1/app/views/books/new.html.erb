<!DOCTYPE HTML>
<html lang="ja">
    <meta charset="UTF-8" />

<head></head>

<body>
  <h1>Books</h1>

<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thread>
  
  <tbody>
    <% @books.each do |book| %>
    <p>title</p> <p>body</p>
    <span><%= book.title%> </span> <span><%= book.body %></span> 
    <tr>
        <td>
          <%= post.title %>
            </td>
            <td>
          <%= post.body %>
        </td>
        <td>
          <%= link_to "show",post_path(post.id) %>
          <%= link_to "edit",edit_post_path(post.id) %>
          <%= link_to "destroy", destroy_post_path(post.id),method::delete, "data-confirm" =>"Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
</body>
</html>