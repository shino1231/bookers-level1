<h1>Books</h1>

<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thread>
</table>
  
<tbody>
  <% @books.each do |book| %>
  <p>title</p> <p>body</p>
  <span><%= book.title%> </span> <span><%= book.body %></span> 
  <% end %>

<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>